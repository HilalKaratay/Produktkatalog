<UserControl x:Class="Produktkatalog.View.DetailProductView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"           
      xmlns:local="clr-namespace:Produktkatalog.ViewModel"
      xmlns:viewModel="clr-namespace:Produktkatalog.ViewModel"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800">
   
    
    <Grid Background="White">

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <!-- Fill Picture1 here-->
                <!--<Image Source="Resource/Dial.png"/> -->
            </Grid>

            <Grid Grid.Row="1">
                <!-- Fill Picture2 here-->
               <!--  <Image Source="Resource/Dial.png"/>-->
            </Grid>
        </Grid>

        <Grid Grid.Column="1" Margin="0 20 0 0" Height="450" VerticalAlignment="Top">
            <Grid.RowDefinitions>
                <RowDefinition Height="20"/>
                <RowDefinition Height="20"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Height="20">
                <TextBlock HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="15" x:Name="ProductName"/>
            </Grid>

            <Grid Grid.Row="1" Height="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="157*"/>
                    <ColumnDefinition Width="110*"/>
                </Grid.ColumnDefinitions>
                <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="10" Name="x" Margin="133,0,0,0"/>
            </Grid>

            <StackPanel Grid.Row="2" Height="330" VerticalAlignment="Top">
                <Label Content="Produktinformationen:" Margin="35 0"/>
                <TextBlock Text="{Binding SelectedProduct.Information}" Height="300" Width="250"/>
            </StackPanel>
        </Grid>

        <Grid Grid.Column="2">

            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Margin="0 50">
                <StackPanel Orientation="Horizontal">
                    <Label  Content="Produktname:" Width="100"/>
                    <TextBlock  Text="{Binding SelectedProduct.ProductName}" Margin ="20 3 0 0" Width="140" /> <!--ACHTUNG ÄNDERN BITTE-->
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label Content="Produktfamilie:" Width="100" />
                    <TextBlock Text="{Binding SelectedProduct.Productfamiliy}" Margin ="20 3 0 0" Width="140" />
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label Content="Einsatzbereiche:" Width="100"/>
                    <TextBlock Text="{Binding SelectedProduct.ApplicationPlace}" Margin ="20 3 0 0" Width="140" />
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label Content="Montageort:" Width="100"/>
                    <TextBlock Text="{Binding SelectedProduct.Installation}" Margin ="20 3 0 0" Width="140" />
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label Content="Montageart:" Width="100"/>
                    <TextBlock Text="{Binding SelectedProduct.MountingType}" Margin ="20 3 0 0" Width="140" />
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label Content="Abmessungen:" Width="100"/>
                    <TextBlock Text="{Binding SelectedProduct.ProductDimension}" Margin ="20 3 0 0" Width="140" />
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label Content="Form:" Width="100"/>
                    <TextBlock Text="{Binding SelectedProduct.Form}" Margin ="20 3 0 0" Width="140" />
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label Content="Verstellbarkeit:" Width="100"/>
                    <TextBlock Text="{Binding SelectedProduct.Adjustability}" Margin ="20 3 0 0" Width="140" />
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label Content="Lichtstrom:" Width="100"/>
                    <TextBlock Text="{Binding SelectedProduct.ProductLumFlux}" Margin ="20 3 0 0" Width="140" />
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label Content="Leistung:" Width="100"/>
                    <TextBlock Text="{Binding SelectedProduct.Performance}" Margin ="20 3 0 0" Width="140" />
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label Content="Lichtausbeute:" Width="100"/>
                    <TextBlock Text="{Binding SelectedProduct.LightYield}" Margin ="20 3 0 0" Width="140" />
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label Content="Farbwiedergabei.:" Width="100"/>
                    <TextBlock Text="{Binding SelectedProduct.ColorRenderingIndex}" Margin ="20 3 0 0" Width="140" />
                </StackPanel>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
